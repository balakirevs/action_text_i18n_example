<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <% if comment&.content_body.present? %>
          <td><%= raw comment.content_body %></td>
          <td><%= link_to t('.show'), comment %></td>
          <td><%= link_to t('.edit'), edit_comment_path(comment) %></td>
          <td><%= link_to t('.destroy'), comment, method: :delete, data: { confirm: t('.sure') } %></td>
        <% end %>
        <% t('.no_comments') if @comments.nil? %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_comment_path %>
